{% extends 'admin/admin_base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>Додати Налаштування</h2>
            <div class="card card-plain">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.slug,{
                        'attr': {
                            'class': ' form-control'
                        }
                    }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.title,{
                        'attr': {
                            'class': 'form-control',
                            'rows': 10
                        },

                    }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.value,{
                        'attr': {
                            'class': 'form-control',
                            'rows': 10
                        },

                    }) }}
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary" type="submit">
                       Ok
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

