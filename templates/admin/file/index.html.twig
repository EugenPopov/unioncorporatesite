{% extends 'admin/admin_base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card card-plain">
                <div class="card-header card-header-success">
                    <h4 class="card-title">Файли
                        <button type="button" class="btn btn-sm btn-info"
                                onclick="window.location.href='{{ path('admin_file_create') }}'">Створити
                        </button>
                    </h4>
                </div>
                <div class="row">
                    {% for item in files %}
                        <div class="col-md-6">
                        <div class="card  p-1 ">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card-header card-header-icon card-header-info">
                                        <div class="card-icon">
                                            <i class="material-icons">language</i>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-6 d-flex justify-content-end ">
                                    <button type="button" rel="tooltip" class=" btn btn-sm btn-success"
                                            onclick="window.location.href='{{ path('admin_file_update',{'id': item.id}) }}'">
                                        <i class="material-icons">edit</i>
                                    </button>
                                    <button type="button" rel="tooltip" class="btn btn-sm btn-danger mr-2 "
                                            onclick="window.location.href='{{ path('admin_file_delete',{'id': item.id}) }}'">
                                        <i class="material-icons">close</i>
                                    </button>
                                </div>
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h4 class="card-title">{{ item.name }}</h4>
                                        <p>
                                            {{ item.path }}
                                        </p>
                                        <h4 class="card-title">Сторінки, до яких прив'язано:</h4>
                                        {% for article in item.article %}
                                            <a style="text-decoration: underline" href="{{ path('admin_article_update', {'slug': article.slug}) }}">{{ article.title }}</a><br>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
