{% extends 'admin/admin_base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>Додати Файл</h2>
            <div class="card card-plain">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.name,{
                        'attr': {
                            'class': 'form-control',
                            'placeholder':'Опис',
                            'rows': 10
                        },

                    }) }}
                </div>
                <div class="form-file-upload form-file-simple">
                    {{ form_widget(form.path,{
                        'attr': {
                            'class': 'form-control inputFileVisible ',
                            'placeholder':'Фото',
                            'rows': 10
                        },

                    }) }}
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary" type="submit">
                       Ok
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

