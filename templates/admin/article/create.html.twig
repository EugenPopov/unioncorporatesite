{% extends 'admin/admin_base.html.twig' %}
{% block content %}

    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Додати Статтю</h2>
            <div class="card ">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.title,{
                            'attr': {
                                'class': 'textarea form-control'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.short_description ,{
                            'attr': {
                                'class': 'form-control',
                                'placeholder':'Кр. Опис',
                                'rows': 10
                            },

                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.description,{
                            'attr': {
                                'class': 'form-control',
                                'placeholder':'Опис',
                                'rows': 10
                            },

                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.category,{
                            'attr': {
                                'class': 'form-control',
                                'placeholder':'Опис',
                                'rows': 10
                            },

                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.template,{
                            'attr': {
                                'class': 'form-control',
                                'placeholder':'Шаблон',
                                'rows': 10
                            },

                        }) }}
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary" type="submit">
                            Ok
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}

