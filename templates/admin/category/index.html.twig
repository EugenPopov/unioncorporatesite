{% extends 'admin/admin_base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-warning">
                    <h4 class="card-title">Категорії
                        <button type="button" class="btn btn-sm btn-info"
                                onclick="window.location.href='{{ path('admin_category_create') }}'">Створити
                        </button>
                    </h4>
                </div>
                <div class="row">
                    {% for item in categories %}
                        <div class="col-md-6">
                            <div class="card">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card-header card-header-icon card-header-info">
                                            <div class="card-icon">
                                                <i class="material-icons">language</i>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-6 ">
                                        <button type="button" rel="tooltip" class="float-right btn btn-sm btn-success"
                                                onclick="window.location.href='{{ path('admin_category_update',{'slug': item.slug}) }}'">
                                            <i class="material-icons">edit</i>
                                        </button>
                                        <button type="button" rel="tooltip" class="float-right btn btn-sm btn-danger "
                                                onclick="window.location.href='{{ path('admin_category_delete',{'slug': item.slug}) }}'">
                                            <i class="material-icons">close</i>
                                        </button>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <h4 class="card-title">{{ item.title }}</h4>
                                            <p>
                                                {{ item.description }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                             </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
